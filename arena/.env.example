# Trading Arena — Environment Configuration
# Copy to .env and fill in values.

# ─── Chain / RPC ──────────────────────────────────────────
# Set to "true" to include the local Anvil chain (id 31337)
VITE_USE_LOCAL_CHAIN=true

# RPC URL for the chain (default: http://127.0.0.1:8545)
VITE_RPC_URL=http://127.0.0.1:8545

# Chain ID (default: 31337 for Anvil)
VITE_CHAIN_ID=31337

# ─── Contract Addresses ──────────────────────────────────
# Tangle Services contract (default: Anvil deterministic)
VITE_TANGLE_CONTRACT=0xCf7Ed3AccA5a467e9e704C703E8D87F634fB0Fc9

# VaultFactory address (deployed by TradingBlueprint)
VITE_VAULT_FACTORY=0x0000000000000000000000000000000000000000

# TradingBlueprint address
VITE_TRADING_BLUEPRINT=0x0000000000000000000000000000000000000000

# ─── Service Discovery ───────────────────────────────────
# Comma-separated service IDs to show on the leaderboard.
# When empty, the app shows mock demo data.
VITE_SERVICE_IDS=0

# Blueprint IDs for each variant (default: 0 = hidden in UI)
VITE_BLUEPRINT_ID=0
VITE_INSTANCE_BLUEPRINT_ID=0
VITE_TEE_BLUEPRINT_ID=0

# ─── Validator ─────────────────────────────────────────────
# Validator blueprint + services for trade validation
VITE_VALIDATOR_BLUEPRINT_ID=0
# Default validator service (used when "Default validators" is selected)
VITE_VALIDATOR_SERVICE_ID=0
# All available validator services (comma-separated, shown in UI for selection)
VITE_VALIDATOR_SERVICE_IDS=0

# ─── Per-Bot API URLs ────────────────────────────────────
# JSON mapping service ID → HTTP API base URL.
# Each bot runs its own API; this maps service IDs to their endpoints.
VITE_BOT_APIS={"0":"http://localhost:3100"}

# ─── Bot Metadata ────────────────────────────────────────
# JSON mapping service ID → {name, strategyType, createdAt}.
# Provides human-readable names and strategy labels for on-chain bots.
VITE_BOT_META={"0":{"name":"Alpha Momentum","strategyType":"momentum"}}

# ─── WalletConnect ───────────────────────────────────────
# Get a project ID at https://cloud.walletconnect.com
VITE_WALLETCONNECT_PROJECT_ID=
